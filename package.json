{
    "name": "second-brain",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "format": "prettier --log-level warn --write .",
        "dev": "npm run format && next dev --turbopack",
        "build": "npm run format && next build",
        "start": "next start",
        "lint": "next lint",
        "generate": "drizzle-kit generate --config ./drizzle.config.ts",
        "migrate:cf": "wrangler d1 migrations apply second-brain-db --remote",
        "migrate:local": "drizzle-kit migrate --config ./drizzle.config.ts",
        "push:cf": "wrangler d1 push",
        "push:local": "drizzle-kit push --config ./drizzle.config.ts",
        "studio": "drizzle-kit studio --config ./drizzle.config.ts"
    },
    "dependencies": {
        "@hookform/resolvers": "^3.9.1",
        "@radix-ui/react-avatar": "^1.1.2",
        "@radix-ui/react-collapsible": "^1.1.2",
        "@radix-ui/react-dialog": "^1.1.4",
        "@radix-ui/react-dropdown-menu": "^2.1.4",
        "@radix-ui/react-label": "^2.1.1",
        "@radix-ui/react-separator": "^1.1.1",
        "@radix-ui/react-slot": "^1.1.1",
        "@radix-ui/react-tabs": "^1.1.2",
        "@radix-ui/react-tooltip": "^1.1.6",
        "@types/nodemailer": "^6.4.17",
        "better-auth": "^1.0.22",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "cmdk": "1.0.0",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.7",
        "drizzle-orm": "^0.38.2",
        "drizzle-zod": "^0.5.1",
        "lucide-react": "^0.468.0",
        "next": "15.1.0",
        "next-themes": "^0.4.4",
        "nodemailer": "^6.9.16",
        "prettier-plugin-classnames": "^0.7.5",
        "prettier-plugin-tailwindcss": "^0.6.9",
        "react": "19.0.0",
        "react-dom": "19.0.0",
        "react-hook-form": "^7.54.1",
        "react-icons": "^5.4.0",
        "sonner": "^1.7.1",
        "tailwind-merge": "^2.5.5",
        "tailwindcss-animate": "^1.0.7",
        "wrangler": "^3.98.0",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/node": "^20.17.10",
        "@types/react": "19.0.1",
        "@types/react-dom": "19.0.2",
        "drizzle-kit": "^0.30.1",
        "postcss": "^8.4.49",
        "tailwindcss": "^3.4.16",
        "typescript": "^5.7.2"
    }
}
